unit uFileINI;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Forms, System.IniFiles, CPort;

type
  TFileINI = class(TForm)
    procedure ReadINIFile;
    procedure WriteINIFile;
  end;

var
  uINI: TFileINI;

implementation

uses
  uSerialPort;

{ TFileINI }

procedure TFileINI.ReadINIFile;
begin
  if FileExists('pSerialPort.ini') then

  fSerial.cmpt1.LoadSettings(TStoreType.stIniFile, 'pSerialPort.ini');
end;

procedure TFileINI.WriteINIFile;
begin
  fSerial.cmpt1.StoreSettings(TStoreType.stIniFile, 'pSerialPort.ini');
end;

end.
